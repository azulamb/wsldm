{
	"tasks": {
		"sample": "deno run --allow-read --allow-write --allow-run ./src/sample.ts",
		"run": "deno run --allow-read --allow-write --allow-run ./src/main.ts",
		"build": "deno compile --unstable --allow-read --allow-write --allow-run --output bin/wsldm ./src/main.ts"
	},
	"lint": {
		"files": {
			"include": ["src/"]
		},
		"rules": {
		  "tags": ["recommended"],
		  "include": [],
		  "exclude": ["require-await"]
		}
	},
	"fmt": {
		"files": {
			"include": ["src/"]
		},
		"options": {
			"useTabs": true,
			"indentWidth": 4,
			"lineWidth": 160,
			"singleQuote": true
		}
	}
}
